{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "templates/**",
        "suppressStreams": true  // Prevents Python output truncation
      }
    }
  ],
  "routes": [
    {
      "src": "/public/(css|images|js)/(.*)",
      "dest": "/public/$1/$2",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/static/(.*)",
      "status": 301,
      "headers": {
        "Location": "/public/$1"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/app",
      "methods": ["GET", "POST", "OPTIONS"]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/app"
    }
  ]
}
