{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "templates/**",
        "suppressStreams": true
      }
    }
  ],
  "routes": [
    {
      "src": "/public/css/(.*\\.css)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/public/js/(.*\\.js)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/public/images/(.*\\.(png|jpg|jpeg|gif|svg|ico))",
      "dest": "/public/images/$1"
    },
    {
      "src": "/static/(.*)",
      "status": 301,
      "headers": {
        "Location": "/public/$1"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/app",
      "methods": ["GET", "POST", "OPTIONS"]
    }
  ]
}
