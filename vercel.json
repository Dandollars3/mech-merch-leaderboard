{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "templates/**",
        "suppressStreams": true
      }
    }
  ],
  "routes": [
    {
      "src": "/public/css/(.*\\.css)",
      "dest": "/public/css/$1",
      "headers": {
        "Content-Type": "text/css",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/public/js/(.*\\.js)",
      "dest": "/public/js/$1",
      "headers": {
        "Content-Type": "application/javascript",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/public/images/(.*\\.(png|jpg|jpeg|gif|svg|ico))",
      "dest": "/public/images/$1",
      "headers": {
        "Content-Type": "image/$2",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/static/(.*)",
      "status": 301,
      "headers": {
        "Location": "/public/$1"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/app",
      "methods": ["GET", "POST", "OPTIONS"]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/app"
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
